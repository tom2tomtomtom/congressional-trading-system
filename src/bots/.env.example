# Congressional Trading Intelligence System
# Distribution Bots Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# General Bot Settings
# =============================================================================
BOT_ENVIRONMENT=development          # development, staging, production
BOT_DRY_RUN=true                     # Set to false to actually post
BOT_RATE_LIMIT=30                    # Max posts per hour
BOT_INCLUDE_SCORES=true              # Include conviction scores in posts
BOT_MIN_CONVICTION=0                 # Minimum conviction score to alert (0-100)
BOT_MIN_AMOUNT=15000                 # Minimum trade amount to alert

# =============================================================================
# Twitter/X Bot (D1)
# Get credentials at: https://developer.twitter.com/
# =============================================================================
TWITTER_API_KEY=                     # Consumer Key (API Key)
TWITTER_API_SECRET=                  # Consumer Secret (API Secret)
TWITTER_ACCESS_TOKEN=                # OAuth 1.0a Access Token
TWITTER_ACCESS_SECRET=               # OAuth 1.0a Access Token Secret
TWITTER_BEARER_TOKEN=                # Bearer Token for API v2

# =============================================================================
# Discord Bot (D2)
# Get credentials at: https://discord.com/developers/applications
# =============================================================================
DISCORD_BOT_TOKEN=                   # Bot token from Developer Portal
DISCORD_GUILD_ID=                    # Server ID for guild-specific commands (optional)
DISCORD_ALERT_CHANNEL_ID=            # Channel ID for automated alerts
DISCORD_ADMIN_ROLE_ID=               # Role ID for admin commands (optional)

# =============================================================================
# Email Service (D3)
# =============================================================================
EMAIL_PROVIDER=sendgrid              # sendgrid, ses, or smtp
EMAIL_FROM_ADDRESS=alerts@congresstrading.io
EMAIL_FROM_NAME=Congressional Trading Intelligence
EMAIL_REPLY_TO=                      # Reply-to address (optional)

# SendGrid (recommended)
# Get API key at: https://sendgrid.com/
SENDGRID_API_KEY=

# AWS SES (alternative)
# Get credentials at: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# SMTP (alternative)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# Optional: Push Notifications (D4 - future)
# =============================================================================
# FIREBASE_PROJECT_ID=
# FIREBASE_SERVICE_ACCOUNT_KEY=

# =============================================================================
# Optional: Database for subscribers (if not using in-memory)
# =============================================================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/congress_trading
# REDIS_URL=redis://localhost:6379
