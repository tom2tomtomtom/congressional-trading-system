# Congressional Trading Intelligence System - Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/congressional_trading_dev
REDIS_URL=redis://localhost:6379/0

# API Keys
PROPUBLICA_API_KEY=your_propublica_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
CONGRESS_GOV_API_KEY=your_congress_gov_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
BCRYPT_LOG_ROUNDS=12

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=100 per hour

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# ML Model Configuration
MODEL_UPDATE_INTERVAL=3600  # seconds
ANOMALY_THRESHOLD=7.0
ML_MODEL_PATH=models/production

# Data Refresh Intervals
TRADING_DATA_REFRESH=300    # 5 minutes
MEMBER_DATA_REFRESH=3600    # 1 hour
COMMITTEE_DATA_REFRESH=86400 # 24 hours

# Performance Settings
CACHE_TTL=300
MAX_CONTENT_LENGTH=16777216  # 16MB
REQUEST_TIMEOUT=30